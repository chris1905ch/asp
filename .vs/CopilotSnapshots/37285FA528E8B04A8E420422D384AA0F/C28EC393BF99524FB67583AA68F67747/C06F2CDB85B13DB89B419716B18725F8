<!-- FontAwesome CDN -->
<script src="https://kit.fontawesome.com/7e7e2e6e2e.js" crossorigin="anonymous"></script>
<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Sidebar desplegable
        $('#sidebarCollapse').on('click', function () {
            $('#sidebar').toggleClass('active');
            if ($('#sidebar').hasClass('active')) {
                $('.luxury-content').addClass('sidebar-open');
            } else {
                $('.luxury-content').removeClass('sidebar-open');
            }
        });
        // Cerrar sidebar al hacer clic fuera en móvil
        $(document).on('click touchstart', function (e) {
            if ($(window).width() < 992) {
                if (!$(e.target).closest('#sidebar, #sidebarCollapse').length && $('#sidebar').hasClass('active')) {
                    $('#sidebar').removeClass('active');
                    $('.luxury-content').removeClass('sidebar-open');
                }
            }
        });
    });
</script>
