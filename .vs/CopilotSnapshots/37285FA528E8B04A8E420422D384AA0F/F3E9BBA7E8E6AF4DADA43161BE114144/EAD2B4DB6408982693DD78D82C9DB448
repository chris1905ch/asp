                <div class="col-md-6 mb-3">
                    @Html.LabelFor(m => m.HabitacionId)
                    @Html.DropDownList("HabitacionId", null, "Seleccione una habitación", new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.HabitacionId, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(m => m.FechaIngreso)
                    @Html.TextBoxFor(m => m.FechaIngreso, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                    @Html.ValidationMessageFor(m => m.FechaIngreso, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(m => m.FechaSalida)
                    @Html.TextBoxFor(m => m.FechaSalida, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                    @Html.ValidationMessageFor(m => m.FechaSalida, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(m => m.Estado)
                    <select class="form-control" id="Estado" name="Estado" required>
                        <option value="">Seleccione un estado</option>
                        @foreach (var estado in estados) {
                            <option value="@estado">@estado</option>
                        }
                    </select>
                    @Html.ValidationMessageFor(m => m.Estado, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3 mb-3">
                    @Html.LabelFor(m => m.Adultos)
                    @Html.TextBoxFor(m => m.Adultos, new { @class = "form-control", type = "number", min = 1, required = "required" })
                    @Html.ValidationMessageFor(m => m.Adultos, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3 mb-3">
                    @Html.LabelFor(m => m.Ninos)
                    @Html.TextBoxFor(m => m.Ninos, new { @class = "form-control", type = "number", min = 0, required = "required" })
                    @Html.ValidationMessageFor(m => m.Ninos, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(m => m.MontoEstimado)
                    @Html.TextBoxFor(m => m.MontoEstimado, new { @class = "form-control", type = "number", min = 0, step = "0.01", required = "required" })
                    @Html.ValidationMessageFor(m => m.MontoEstimado, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(m => m.MontoPagado)
                    @Html.TextBoxFor(m => m.MontoPagado, new { @class = "form-control", type = "number", min = 0, step = "0.01", required = "required" })
                    @Html.ValidationMessageFor(m => m.MontoPagado, "", new { @class = "text-danger" })
