            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(m => m.ClienteId)
                    @Html.DropDownList("ClienteId", null, "Seleccione un cliente", new { @class = "form-control", required = "required" })
