@model SistemaHotel.Models.Trabajadores
@{
    ViewBag.Title = "Eliminar Trabajador";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
<div class="luxury-bg min-vh-100 p-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="luxury-title">Eliminar Trabajador</h2>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Volver</a>
        </div>
        <div class="alert alert-warning mb-4">¿Estás seguro que deseas eliminar este trabajador?</div>
        <dl class="row">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombres</dd>
            <dt class="col-sm-3">Apellido</dt>
            <dd class="col-sm-9">@Model.Apellidos</dd>
            <dt class="col-sm-3">DUI/NIT</dt>
            <dd class="col-sm-9">@Model.DUI_NIT</dd>
            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">@Model.Telefono</dd>
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
            <dt class="col-sm-3">Cargo</dt>
            <dd class="col-sm-9">@Model.Cargo</dd>
            <dt class="col-sm-3">Salario</dt>
            <dd class="col-sm-9">$@Model.Salario.ToString("N2")</dd>
            <dt class="col-sm-3">Activo</dt>
            <dd class="col-sm-9">@(Model.Activo ? "Sí" : "No")</dd>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">Eliminar</button>
        }
    </div>
</div>
</body>
</html>
