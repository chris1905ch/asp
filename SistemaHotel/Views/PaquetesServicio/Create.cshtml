@model SistemaHotel.Models.PaqueteServicio
@{
    ViewBag.Title = "Agregar Paquete de Servicios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
<div class="luxury-bg min-vh-100 p-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="luxury-title">Agregar Paquete de Servicios Extras</h2>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Volver</a>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(m => m.Nombre)
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(m => m.Precio)
                    @Html.TextBoxFor(m => m.Precio, new { @class = "form-control", type = "number", min = 0, step = "0.01", required = "required" })
                    @Html.ValidationMessageFor(m => m.Precio, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-12 mb-3">
                    @Html.LabelFor(m => m.Descripcion)
                    @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = 3 })
                    @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-12 mb-3">
                    <label>Servicios Incluidos</label>
                    @Html.ListBox("serviciosSeleccionados", ViewBag.Servicios as MultiSelectList, new { @class = "form-control", size = 6 })
                </div>
            </div>
            <button type="submit" class="btn luxury-btn">Guardar</button>
        }
    </div>
</div>
