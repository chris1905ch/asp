@model IEnumerable<SistemaHotel.Models.Pagos>
@{
    ViewBag.Title = "Pagos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
<div class="luxury-bg min-vh-100 p-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="luxury-title">Pagos</h2>
            <div>
                <a href="@Url.Action("Create")" class="btn luxury-btn">Agregar Pago</a>
                <a href="@Url.Action("Menu", "Home")" class="btn btn-outline-dark ms-2">Salir</a>
            </div>
        </div>
        <div class="table-responsive luxury-table">
            <table class="table table-hover table-bordered bg-white rounded">
                <thead class="luxury-table-head">
                    <tr>
                        <th>Reserva</th>
                        <th>Fecha</th>
                        <th>Monto</th>
                        <th>Método</th>
                        <th style="width:120px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@item.ReservaId</td>
                        <td>@item.Fecha.ToShortDateString()</td>
                        <td>$@item.Monto.ToString("N2")</td>
                        <td>@item.Metodo</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-outline-primary">Editar</a>
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-outline-danger">Eliminar</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
